version: '3' 

services: 
  frontend_service:
    image: frontend
    build: .
    ports: 
      - 5000:5000
    environment:
      - API_URL=http://localhost:8000
  backend_service:
    image: backend
    build: .
    ports: 
       - 8000:8000
    environment: 
        - FRONT_URL=http://localhost:5000
        - REDIS=redis
        - REDIS_PORT=6379
  redis:
    image: redis:6.2-rc
