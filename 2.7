version: '3' 

services: 
  frontend_service:
    image: kurkkumopo-frontend
    ports: 
      - 3000:3000
    environment:
      - API_URL=http://localhost:5000
  backend_service:
    image: kurkkumopo-backend 
    ports: 
      - 5000:5000
    depends_on:
      - training_service
    environment: 
      - FRONT_URL=http://localhost:3000
    volumes: 
      - files:/src/model/
  training_service:
    image: kurkkumopo-training
    volumes: 
      - files:/src/model/
      - src/imgs/

volumes:
  files:

    
